generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          Int      @id
  name        String
  position    String
  dateOfBirth DateTime
  nationality String?
  teamId      Int?
  coachId     Int?

  // Define relationships
  Team Team? @relation(fields: [teamId], references: [id])
}

model Team {
  id        Int     @id
  name      String
  tla       String?
  shortName String?
  areaName  String?
  address   String?

  // Define relationships
  Player          Player[]
  Coach           Coach[]
  CompetitionTeam CompetitionTeam[]
}

model Competition {
  id              Int               @id
  name            String
  code            String            @unique
  areaName        String
  CompetitionTeam CompetitionTeam[]
}

model CompetitionTeam {
  competitionCode String
  teamId          Int
  competition     Competition @relation(fields: [competitionCode], references: [code])
  team            Team        @relation(fields: [teamId], references: [id])

  @@id([competitionCode, teamId])
}

model Coach {
  id          Int      @id
  name        String
  dateOfBirth DateTime
  nationality String?
  teamId      Int?

  // Define relationships
  team Team? @relation(fields: [teamId], references: [id])
}
