generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          Int      @id
  name        String
  position    String
  dateOfBirth DateTime
  nationality String?
  teamId      Int?
  coachId     Int?

  // Define relationships
  coach Coach? @relation(fields: [coachId], references: [id])
  Team  Team?  @relation(fields: [teamId], references: [id])
}

model Team {
  id              Int     @id
  name            String
  tla             String?
  shortName       String?
  areaName        String?
  address         String?
  competitionCode String

  // Define relationships
  competition Competition @relation(fields: [competitionCode], references: [code])
  Player      Player[]
  Coach       Coach[]
}

model Competition {
  id       Int    @id
  name     String
  code     String @unique
  areaName String
  teams    Team[]
}

model Coach {
  id          Int      @id
  name        String
  dateOfBirth DateTime
  nationality String?
  teamId      Int?

  // Define relationships
  team   Team?    @relation(fields: [teamId], references: [id])
  Player Player[]
}
