{
    "compilerOptions": {
        "target": "es2020", // Updated to a newer version
        "module": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node", // Using standard Node resolution,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
